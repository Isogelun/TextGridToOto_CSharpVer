    <Window xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:TextGridToOto_CSharpVer.ViewModels"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500" MinHeight="500" MinWidth="800"
            x:Class="TextGridToOto_CSharpVer.Views.MainWindow"
            x:DataType="vm:MainWindowViewModel"
            Icon="/Assets/TextGrid2oto.ico"
            Title="TextGridToOto_CSharpVer">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="20" Grid.Column="0">
                <TextBlock Margin="0 5">wavPath</TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox Width="300" 
                             Text="{Binding WavFolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Watermark="Enter your Path"/>
                    <Button Click="OnSelectWavFolderClick">Open</Button>
                </StackPanel>

                <TextBlock Margin="0 5">PresampPath</TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="10">
				    <TextBox Width="300" 
				                          Text="{Binding PresampFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
				                          Watermark="Enter your Path"/>
                    <Button Click="OnSelectPresampFolderClick">Open</Button>
                </StackPanel>
            </StackPanel>

             <StackPanel Margin="20" Grid.Column="1">
                <StackPanel Orientation="Horizontal" Spacing="20">

                    <StackPanel>
                        <TextBlock Margin="0 5">Type</TextBlock>
                        <ComboBox SelectedIndex="{Binding SelectedTypeIndex, Mode=TwoWay}" 
                                  MaxDropDownHeight="100">
                            <ComboBoxItem>CV</ComboBoxItem>
                            <ComboBoxItem>CVVC</ComboBoxItem>
                            <ComboBoxItem>VCV</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Margin="0 5">Multiple scales</TextBlock>
                        <ComboBox SelectedIndex="{Binding SelectedMultipleScalesIndex, Mode=TwoWay}" 
                                  MaxDropDownHeight="100">
                            <ComboBoxItem>Close</ComboBoxItem>
                            <ComboBoxItem>Open</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Margin="0 5">Suffix</TextBlock>
                        <TextBox Text="{Binding Suffix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Watermark="Enter Suffix"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Margin="0 5">ConfigPath</TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="10">
				    <TextBox Width="300" 
				                          Text="{Binding ConfigFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
				                          Watermark="Enter your Path"/>
                    <Button Click="OnSelectConfigFolderClick">Open</Button>
                </StackPanel>
            </StackPanel>
            
            <!-- 日志输出区域 -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" 
                    Margin="20,10,20,10" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <ScrollViewer x:Name="LogScrollViewer"
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="LogTextBox"
                             Text="{Binding LogText}"
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True"
                             Focusable="False"
                             Cursor="Arrow"
                             Background="#F5F5F5"
                             FontFamily="Consolas"
                             FontSize="12"
                             Watermark="日志输出区域..."/>
                </ScrollViewer>
            </Border>
            
            <!-- 底部按钮区域 -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,10" 
                        Spacing="40">
                <Button Width="150" Height="30" FontSize="13" Command="{Binding RunLabCommand}">Run LAB</Button>
                <Button Width="150" Height="30" FontSize="13" Command="{Binding RunFACommand}">Run FA</Button>
                <Button Width="150" Height="30" FontSize="13" Command="{Binding RunConversionCommand}">Run Conversion</Button>
                <Button Width="150" Height="30" FontSize="13">Run</Button>
            </StackPanel>

            <!-- 进度条区域 -->
            <Border Grid.Row="3" Grid.ColumnSpan="2"
                    Margin="20,0,20,10"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ProgressBar Grid.Column="0"
                                 Height="20"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding ProgressValue}"
                                 IsIndeterminate="{Binding IsProgressIndeterminate}"
                                 Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding ProgressText}"
                               VerticalAlignment="Center"
                               MinWidth="80"
                               TextAlignment="Right"
                               FontSize="12"/>
                </Grid>
            </Border>

        </Grid>

    </Window>
